@import '../../../assets/styles/common.styl'

.thread-img-item
  height: px2rem(240)
  padding: 0 px2rem(30)
  border-top: 1px solid #e5e5e5
  position: relative
  background: #fff
  &:first-child
    border-top: none
  .item-wrap
    display: flex
    // width: 100%
    height: 100%
    flex-flow: row nowrap
  
  .thread-cont
    position: relative
    flex: 1
    .thread-title
      font-dpr 16
      color: #333333
      margin-top: px2rem(46)
      min-width: px2rem(517)
      line-height: 1.4
    .thread-info
      position: absolute
      bottom: px2rem(43)
      // left: px2rem(30)
      left: 0
      right: 0
      // right: px2rem(200)
      line-height: px2rem(36)
      .info-left
        float: left
        .info-avatar
          img 
            width: px2rem(36)
            height: px2rem(36)
            border-radius: px2rem(36)
            vertical-align: middle
        .info-author
          color: #687785
          font-dpr: 12
          margin: 0 px2rem(14) 0 px2rem(10)
          display: inline-block
          max-width: px2rem(125)
          white-space: nowrap
          text-overflow: ellipsis
          overflow: hidden
          vertical-align: middle
        .info-time
          color: #ccc
          display: inline-block
          vertical-align: middle
          
      .info-right
        float: right
        color: #ccc
        .info-wrap
          margin-left: px2rem(18)
          display: inline-block
          vertical-align: middle
          .num
            margin-left: px2rem(8)
          &:first-child
            margin-left: 0
      
    


    
  .thread-img
    margin-top: px2rem(46)
    margin-left: px2rem(33)
    width: px2rem(140)
    height: px2rem(140)
    // flex: 1
    img
      width: 100%
      height: 100%
      background: url('../../../assets/images/home/default-thread-img.jpg') no-repeat
      background-size: 100% 100%
