.showPopup-enter {
  opacity: 0.01;
  animation: enter-animations .3s ease-out
}
@keyframes enter-animations
  0%{transform:scale(0);}
  60%{transform:scale(1.1);}
  90%{transform:scale(.9);}
  100%{transform:scale(1);}

.showPopup-enter.showPopup-enter-active {
  opacity: 1;
  transition: opacity 300ms ease-out;
}

.showPopup-leave {
  opacity: 1;
  animation: leave-animations .2s ease-out
}

@keyframes leave-animations
  0%{transform:scale(1);}
  100%{transform:scale(0.6);}

.showPopup-leave.showPopup-leave-active {
  opacity: 0.01;
  transition: opacity 200ms ease-out;
}

