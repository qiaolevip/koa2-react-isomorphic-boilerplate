@import '../../assets/styles/common.styl'

.forum-header
  position: fixed
  width: 100%
  z-index: 1000
  background: #f9f9f9
  display: flex
  color: $dianronglv
  height: px2rem(90)
  line-height: px2rem(90)
  padding: 0 px2rem(20)
  .icon
    font-weight: 900
    font-dpr(24)
    vertical-align: middle
  .header-cont
    flex: 1
    text-align: center
    font-dpr(20)
    color: #999

  .header-menu
    position: absolute
    top: px2rem(86)
    right: px2rem(10)
    width: px2rem(240)
    text-align: center
    background: #fff
    border: 1px solid #d7dadb
    box-shadow: 0 2px 6px #d7dadb
    list-style: none
    z-index: 1001
    li
      border-top: 1px solid #d7dadb
      &:first-child
        border-top: none
      a
        display: block
        width: 100%
        height: 100%
        font-dpr(14)
    &:before, &:after
      border: px2rem(20) solid transparent
      border-bottom: px2rem(24) solid #fff
      width: 0
      height: 0
      position: absolute;
      right: px2rem(10)
      top: px2rem(-20)
      content: ' '
      transform: translateY(-50%)
    &:before
      border-bottom-color: #d7dadb
      top: px2rem(-21)
