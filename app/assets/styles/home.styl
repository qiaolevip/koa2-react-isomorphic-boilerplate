.lod-spinn{width:60px;height:60px;position:fixed;margin:-30px auto auto -30px;top:50%;left:50%;z-index:1001}.lod-text{font-size:.85rem;color:#B8B5B5;text-align:center;position:absolute;bottom:-1.5rem;left:.25rem;width:100%}.lod-double-bounce1,.lod-double-bounce2{width:100%;height:100%;border-radius:50%;background-color:#ddd;opacity:.6;position:absolute;top:0;left:0;-webkit-animation:lod-bounce 2s infinite ease-in-out;animation:lod-bounce 2s infinite ease-in-out}.lod-double-bounce2{-webkit-animation-delay:-1s;animation-delay:-1s}@-webkit-keyframes lod-bounce{0%,100%{-webkit-transform:scale(0)}50%{-webkit-transform:scale(1)}}@keyframes lod-bounce{0%,100%{transform:scale(0);-webkit-transform:scale(0)}50%{transform:scale(1);-webkit-transform:scale(1)}}.lod-bfc{overflow:hidden;zoom:1}.lod-bfc:after,.lod-bfc:before{display:block;overflow:hidden;visibility:hidden;width:0;height:0;content:''}.lod-bfc:after{clear:both}

.spinner {margin: 10px auto;width: 70px;text-align: center;}
.spinner .bounce1 {-webkit-animation-delay: -.32s;animation-delay: -.32s;}
.spinner>div {width: 9pt;height: 9pt;margin: 0 3px;background-color: #9e9e9e;border-radius: 100%;display: inline-block;-webkit-animation: sk-bouncedelay 1.4s infinite ease-in-out both;animation: sk-bouncedelay 1.4s infinite ease-in-out both;}
.spinner .bounce2 {-webkit-animation-delay: -.16s;animation-delay: -.16s;}
@-webkit-keyframes sk-bouncedelay {
  0%, 80%, 100% { -webkit-transform: scale(0) }
  40% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bouncedelay {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
    transform: scale(0);
  } 40% {
    -webkit-transform: scale(1.0);
    transform: scale(1.0);
  }
}

